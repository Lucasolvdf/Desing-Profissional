#include <stdio.h>      // Entrada e saída padrão
#include <stdlib.h>     // Funções de alocação de memória
#include <time.h>       // Controle de tempo e geração de números aleatórios
#include <string.h>     // Função memcpy

// ======================= CONFIGURAÇÕES DO PROGRAMA =======================

// Tamanhos dos vetores usados no benchmark
#define NUM_SIZES 3
const int BENCHMARK_SIZES[NUM_SIZES] = {100, 1000, 10000};

#define MAX_SIZE 10000  // Tamanho máximo permitido para alocação dinâmica
#define RGM_SIZE 8      // Tamanho do vetor pequeno usado no exemplo

// ======================= VARIÁVEIS GLOBAIS PARA MÉTRICAS =======================
// Contadores para operações de comparação e movimento
long long comp_insertion = 0, mov_insertion = 0;
long long comp_merge = 0, mov_merge = 0;
long long comp_quick = 0, mov_quick = 0;

// ======================= FUNÇÕES AUXILIARES =======================

// Gera um vetor aleatório de tamanho n
void generateRandomArray(int arr[], int n) {
    srand(time(NULL)); // Usa o tempo para garantir números aleatórios diferentes
    for(int i = 0; i < n; i++) {
        arr[i] = rand() % 100000; // Números entre 0 e 99.999
    }
}

// Imprime um vetor
void printArray(int arr[], int size) {
    for(int i = 0; i < size; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

// Zera os contadores de operações
void resetMetrics() {
    comp_insertion = mov_insertion = 0;
    comp_merge = mov_merge = 0;
    comp_quick = mov_quick = 0;
}

// ======================= INSERTION SORT =======================
void insertionSort(int arr[], int n, int print_steps) {
    for(int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        // Move elementos maiores à direita
        while (j >= 0 && (++comp_insertion && arr[j] > key)) {
            arr[j + 1] = arr[j];
            mov_insertion++;
            j--;
        }

        arr[j + 1] = key;
        mov_insertion++;

        if (print_steps) {
            printf("Passo %d: ", i);
            printArray(arr, n);
        }
    }
}

// ======================= MERGE SORT =======================

// Realiza a fusão dos subvetores já ordenados
void merge(int arr[], int l, int m, int r, int N, int print_steps) {
    int n1 = m - l + 1;
    int n2 = r - m;

    // Vetores temporários
    int *L = (int*)malloc(n1 * sizeof(int));
    int *R = (int*)malloc(n2 * sizeof(int));

    if (!L || !R) { // Falha ao alocar memória
        free(L);
        free(R);
        return;
    }

    // Copia dados para vetores auxiliares
    for(int i = 0; i < n1; i++) L[i] = arr[l + i];
    for(int i = 0; i < n2; i++) R[i] = arr[m + 1 + i];

    int i = 0, j = 0, k = l;

    // Intercala elementos dos vetores temporários
    while(i < n1 && j < n2) {
        comp_merge++;
        if (L[i] <= R[j]) arr[k++] = L[i++];
        else arr[k++] = R[j++];
        mov_merge++;
    }

    // Copia quaisquer elementos restantes
    while(i < n1) { arr[k++] = L[i++]; mov_merge++; }
    while(j < n2) { arr[k++] = R[j++]; mov_merge++; }

    free(L);
    free(R);

    if (print_steps) {
        printf("Merge: arr[%d..%d] -> ", l, r);
        printArray(arr, N);
    }
}

// Função recursiva do merge sort
void mergeSort(int arr[], int l, int r, int N, int print_steps) {
    if (l < r) {
        int m = l + (r - l) / 2;
        mergeSort(arr, l, m, N, print_steps);
        mergeSort(arr, m + 1, r, N, print_steps);
        merge(arr, l, m, r, N, print_steps);
    }
}

// ======================= QUICK SORT =======================

// Particiona o vetor e retorna a posição do pivô
int partition(int arr[], int low, int high, int N, int print_steps) {
    int pivot = arr[high];
    int i = low - 1;

    for(int j = low; j < high; j++) {
        comp_quick++;
        if (arr[j] <= pivot) {
            i++;

            // Troca arr[i] e arr[j]
            int temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
            mov_quick += 3;
        }
    }

    // Coloca o pivô em sua posição correta
    int temp = arr[i + 1];
    arr[i + 1] = arr[high];
    arr[high] = temp;
    mov_quick += 3;

    if (print_steps) {
        printf("Partition: arr[%d..%d], Pivot = %d -> ", low, high, arr[i + 1]);
        printArray(arr, N);
    }

    return i + 1;
}

// Função recursiva do quicksort
void quickSort(int arr[], int low, int high, int N, int print_steps) {
    if(low < high) {
        int pi = partition(arr, low, high, N, print_steps);
        quickSort(arr, low, pi - 1, N, print_steps);
        quickSort(arr, pi + 1, high, N, print_steps);
    }
}

// ======================= ESTRUTURA PARA RESULTADOS DO BENCHMARK =======================

typedef struct {
    char algorithm[20];
    int size;
    long long comparisons;
    long long movements;
    double time_ms;
} Result;

// Array que guarda todos os resultados
Result results[NUM_SIZES * 3];
int result_count = 0;

// ======================= EXECUÇÃO DO BENCHMARK =======================

// Executa Insertion, Merge e Quick Sort sem imprimir passos
void runBenchmark(int N, int* original_arr) {
    int *arr = (int*)malloc(N * sizeof(int));
    if (!arr) return;

    clock_t start, end;
    double time_taken;

    // ----- Insertion Sort -----
    resetMetrics();
    memcpy(arr, original_arr, N * sizeof(int));
    start = clock();
    insertionSort(arr, N, 0);
    end = clock();
    time_taken = ((double)(end - start) * 1000.0) / CLOCKS_PER_SEC;

    results[result_count++] = (Result){"InsertionSort", N, comp_insertion, mov_insertion, time_taken};

    // ----- Merge Sort -----
    resetMetrics();
    memcpy(arr, original_arr, N * sizeof(int));
    start = clock();
    mergeSort(arr, 0, N - 1, N, 0);
    end = clock();
    time_taken = ((double)(end - start) * 1000.0) / CLOCKS_PER_SEC;

    results[result_count++] = (Result){"MergeSort", N, comp_merge, mov_merge, time_taken};

    // ----- Quick Sort -----
    resetMetrics();
    memcpy(arr, original_arr, N * sizeof(int));
    start = clock();
    quickSort(arr, 0, N - 1, N, 0);
    end = clock();
    time_taken = ((double)(end - start) * 1000.0) / CLOCKS_PER_SEC;

    results[result_count++] = (Result){"QuickSort", N, comp_quick, mov_quick, time_taken};

    free(arr);
}

// Imprime os dados formatados em CSV
void printCSVResults() {
    printf("\n--- Resultados do Benchmark (CSV) ---\n");
    printf("Algoritmo,N,Comparações,Movimentos,Tempo (ms)\n");

    for(int i = 0; i < result_count; i++) {
        printf("%s,%d,%lld,%lld,%.6f\n",
               results[i].algorithm,
               results[i].size,
               results[i].comparisons,
               results[i].movements,
               results[i].time_ms);
    }
}

// ======================= MAIN =======================

int main() {
    int rgm[RGM_SIZE] = {4,5,4,7,3,3,7,4};
    int arr_small[RGM_SIZE];

    printf("============================================\n");
    printf("=== Exemplo com Vetor {4,5,4,7,3,3,7,4} (N=%d) ===\n", RGM_SIZE);
    printf("============================================\n\n");

    // -------------------- Insertion Sort --------------------
    printf("--- Insertion Sort ---\n");
    resetMetrics();
    memcpy(arr_small, rgm, RGM_SIZE * sizeof(int));
    clock_t start = clock();
    insertionSort(arr_small, RGM_SIZE, 1);
    clock_t end = clock();
    printf("Comparações: %lld, Movimentos: %lld, Tempo: %.6lf s\n\n",
           comp_insertion, mov_insertion, (double)(end-start)/CLOCKS_PER_SEC);

    // -------------------- Merge Sort --------------------
    printf("--- Merge Sort (Passo a Passo de Fusão) ---\n");
    resetMetrics();
    memcpy(arr_small, rgm, RGM_SIZE * sizeof(int));
    start = clock();
    mergeSort(arr_small, 0, RGM_SIZE - 1, RGM_SIZE, 1);
    end = clock();
    printf("Comparações: %lld, Movimentos: %lld, Tempo: %.6lf s\n\n",
           comp_merge, mov_merge, (double)(end-start)/CLOCKS_PER_SEC);

    // -------------------- Quick Sort --------------------
    printf("--- Quick Sort (Passo a Passo de Partição) ---\n");
    resetMetrics();
    memcpy(arr_small, rgm, RGM_SIZE * sizeof(int));
    start = clock();
    quickSort(arr_small, 0, RGM_SIZE - 1, RGM_SIZE, 1);
    end = clock();
    printf("Comparações: %lld, Movimentos: %lld, Tempo: %.6lf s\n\n",
           comp_quick, mov_quick, (double)(end-start)/CLOCKS_PER_SEC);

    // -------------------- BENCHMARK --------------------
    printf("==================================================\n");
    printf("=== Execução do Benchmark com Vetores Aleatórios ===\n");
    printf("==================================================\n");
    printf("(Impressão de passos desativada para N > %d)\n\n", RGM_SIZE);

    int *temp_array = (int*)malloc(MAX_SIZE * sizeof(int));
    if (!temp_array) {
        fprintf(stderr, "Erro: falha ao alocar memória.\n");
        return 1;
    }

    for(int i = 0; i < NUM_SIZES; i++) {
        int N = BENCHMARK_SIZES[i];
        printf("Rodando N = %d...\n", N);

        generateRandomArray(temp_array, N);
        runBenchmark(N, temp_array);
    }

    free(temp_array);

    // Exibe o resultado final em formato CSV
    printCSVResults();

    return 0;
}
